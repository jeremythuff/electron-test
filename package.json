{
  "name": "electronTest",
  "version": "0.0.1",
  "description": "A basic desktop application",
  "main": "main.js",
  "scripts": {
    "build:html": "node bld/html.js",
    "build:ts": "tsc",
    "build:ts:require": "npm run build:ts && npm run build:require",
    "build:sass": "node-sass --include-path scss src/resources/styles/scss/main.scss dist/app/resources/styles/css/app.css",
    "build:resources": "node bld/resources.js",
    "build:require": "node bld/require.js",
    "build": "npm install && npm run build:html && npm run build:ts && npm run build:sass && npm run build:resources && npm run build:require",
    "watch:html": "onchange \"src/**/*.html\" -- npm run build:html",
    "watch:ts": "onchange \"src/**/*.ts\" -- npm run build:ts:require",
    "watch:sass": "onchange \"src/**/*.scss\" -- npm run build:sass",
    "watch:resources": "onchange \"src/resources\" -e \"src/resources/styles\" -- npm run build:resources",
    "watch": "concurrently --kill-others \"npm run watch:html\" \"npm run watch:ts\" \"npm run watch:sass\" \"npm run watch:resources\"",
    "clean": "shx rm -rf dist",
    "clean:build": "npm run clean && npm run build",
    "app:dev": "concurrently --kill-others --prefix \"{time}-{pid}\" \"npm run app\" \"npm run watch\"",
    "app": "electron dist/main.js",
    "test": "test"
  },
  "author": "Jeremy Huff",
  "license": "ISC",
  "dependencies": {
    "electron": "^1.3.4"
  },
  "devDependencies": {
    "concurrently": "^2.2.0",
    "node-sass": "^3.8.0",
    "onchange": "^3.0.0",
    "shelljs": "^0.7.4",
    "shx": "^0.1.4",
    "typescript": "^2.1.0-dev.20160910",
    "typings": "^1.3.3"
  }
}
